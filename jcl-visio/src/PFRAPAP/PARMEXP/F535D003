  UPDATE PFRA.TBBPTVX                                                           
  SET    TBTVDTRAIT =   'JJ.MM.SSSS',                                           
         TBTVDMOD   =   'JJ.MM.SSSS',                                           
         TBTVLUSERMOD  =   'CA7PROD'                                            
  WHERE  TBTVLPROG = 'FIBDXC'                                                   
  AND    (TBTVLTVX LIKE 'EPURATION BORDEREAUX DE PLUS DE        :%');           
  UPDATE PFRA.TBBPTVX                                                           
  SET    TBTVDTRAIT =   'JJ.MM.SSSS',                                           
         TBTVDMOD   =   'JJ.MM.SSSS',                                           
         TBTVLUSERMOD  =   'CA7PROD'                                            
  WHERE  TBTVLPROG = 'FEBOCH'                                                   
  AND    (TBTVLTVX LIKE '1111%');                                               
  UPDATE PFRA.TBBPTVX                                                           
  SET    TBTVDTRAIT =   'JJ.MM.SSSS',                                           
         TBTVDMOD   =   'JJ.MM.SSSS',                                           
         TBTVLUSERMOD  =   'CA7PROD'                                            
